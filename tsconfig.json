{
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": ["DOM","es5","es6"],                    
    "target": "ES6",                               
    "module": "commonjs",                          
    "strict": true,                             
    "moduleResolution": "node",
    "outDir": "./build",
    "esModuleInterop": true,        
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true     
  }
}
