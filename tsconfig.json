{
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "compilerOptions": {               
    "target": "ES6",                               
    "module": "commonjs",                          
    "strict": true,                             
    "moduleResolution": "node",
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true,        
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true     
  }
}